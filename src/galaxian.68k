	clr.b	(0x00,a2)                    	| set ENEMY_BULLET.IsActive flag (disables bullet) [ld   (ix+0x00),a]
	clr.b	(0x01,a2)                    	| set ENEMY_BULLET.X to 0 [ld   (ix+0x01),a]
	clr.b	(YH,a2)                    	| set ENEMY_BULLET.YH to 0 [ld   (ix+0x03),a]

