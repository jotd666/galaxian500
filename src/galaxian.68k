* JOTD: added utility functions to emulate rst 10 & ldir

* < A0: source (HL)
* < A1: destination (DE)
* < D1: length (16 bit)
ldir:
	subq.w	#1,d1
0:
	move.b	(a0)+,(a1)+
	dbf		d1,0b
	clr.w	d1
	rts


* < D0: char to write
* < D1: number of chars to write
* < A0: address
rst_10:
	move.w	d1,-(a7)
	and.w	#0xFF,d1
	subq.w	#1,d1
0:
	move.b	d0,(a0)+
	dbf		d1,0b
	move.w	(a7)+,d1
	rts

* "write" to video ram (calls osd_w_bg_videoram)
